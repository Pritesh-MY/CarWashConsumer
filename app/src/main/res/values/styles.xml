<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/avalon</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/avalon_demi</item>
        <item name="android:textColor">@color/textColorHeading</item>
        <item name="android:textColorHint">@color/grey_</item>
        <item name="android:background">@drawable/iv_bg_edittext</item>
        <item name="android:padding" tools:targetApi="o">@dimen/_11sdp</item>

    </style>

    <style name="FontRegular">
        <item name="fontFamily">@font/avalon_demi</item>
    </style>

    <style name="FontMedium">
        <item name="fontFamily">@font/avalon_demi</item>
    </style>

    <style name="FontBold">
        <item name="fontFamily">@font/avalon_bold</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/iv_bg_button</item>
    </style>

    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewDetail">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_10sdp</item>
    </style>

    <style name="CustomDialogNew" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="NoActionbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/avalon</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="android:width">@dimen/_20sdp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TextViewTitleHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="fontFamily">@font/avalon_demi</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorHeading</item>
        <item name="fontFamily">@font/avalon_demi</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextViewCaption">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/avalon</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>