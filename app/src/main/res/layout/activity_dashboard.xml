<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/abLayout"
            layout="@layout/custom_app_menu_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:background="@drawable/iv_bg_button">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="15dp">

                <TextView
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="Silver"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_frame_187__3_" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:paddingHorizontal="15dp"
                android:textColor="@color/white"
                style="@style/FontMedium"
                android:layout_height="wrap_content"
                android:text="1 Year (Daily)" />

            <TextView
                android:layout_width="wrap_content"
                android:paddingHorizontal="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                style="@style/FontMedium"
                android:layout_height="wrap_content"
                android:text="Expires on 31 Nov 2021" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:orientation="vertical"
                android:elevation="1dp"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:background="@drawable/white_rectangle_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:text="Silver"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_frame_187__4_" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="15dp"
                    style="@style/FontMedium"
                    android:layout_height="wrap_content"
                    android:text="1 Year (Daily)" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:elevation="1dp"
                android:paddingBottom="15dp"
                android:background="@drawable/white_rectangle_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:text="Silver"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_frame_187__5_" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="15dp"
                    style="@style/FontMedium"
                    android:layout_height="wrap_content"
                    android:text="1 Year (Daily)" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:orientation="vertical"
                android:elevation="1dp"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:background="@drawable/white_rectangle_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:text="Silver"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_frame_187__6_" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="15dp"
                    style="@style/FontMedium"
                    android:layout_height="wrap_content"
                    android:text="1 Year (Daily)" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:elevation="1dp"
                android:paddingBottom="15dp"
                android:background="@drawable/white_rectangle_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:text="Silver"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_frame_187__7_" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="15dp"
                    style="@style/FontMedium"
                    android:layout_height="wrap_content"
                    android:text="1 Year (Daily)" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@drawable/white_rectangle_bg">

            <TextView
                android:layout_width="wrap_content"
                style="@style/FontMedium"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="1 Year (Daily)" />

            <TextView
                android:layout_width="wrap_content"
                style="@style/FontMedium"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content"
                android:text="Your car will be washed today. Please take your car to the car washer." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time" />

                    <TextView
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="09 : 00 AM - 10 : 00 AM" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:elevation="1dp">


                    <TextView
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carwash Boy" />

                    <TextView
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="09 : 00 AM - 10 : 00 AM" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</layout>